{
  "name": "tori-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot made to follow tori queries.",
  "main": "dist/app.js",
  "repository": "https://github.com/EetuK/tori-telegram-bot.git",
  "author": "EetuK",
  "license": "MIT",
  "private": false,
  "scripts": {
    "distribute": "yarn build-ts && node dist/app.js",
    "develop": "concurrently -k -i -p \"[{name}]\" -n \"Node,TypeScript\" -c \"yellow.bold,cyan.bold\" \"yarn watch-js\" \"yarn watch-ts\"",
    "build-ts": "tsc --skipLibCheck",
    "watch-ts": "tsc -w --skipLibCheck",
    "watch-js": "nodemon dist/app.js"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@types/node-fetch": "^2.5.10",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.9",
    "dotenv": "^8.2.0",
    "jssoup": "0.0.12",
    "markdown-escape": "^1.1.0",
    "markdown-utils": "^0.7.2",
    "module-alias": "^2.2.2",
    "node-fetch": "^2.6.1",
    "node-html-parser": "^3.3.4",
    "superagent": "^6.1.0",
    "superagent-charset": "^1.2.0",
    "telegraf": "^4.3.0",
    "telegraf-i18n": "^6.6.0",
    "typescript": "^4.2.3",
    "x-ray": "^2.3.4"
  }
}
